<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".Activity.DashboardActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        android:src="@drawable/reel_btm"
        android:scaleType="centerCrop"
        android:layout_alignParentBottom="true"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_78sdp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_alignParentBottom="true"
            android:background="#022E64"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/status_nav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/nav_unselected_status"
                android:padding="@dimen/_10sdp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/music_nav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/nav_unselected_music"
                android:padding="@dimen/_10sdp"
                android:layout_weight="1"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"/>

            <ImageView
                android:id="@+id/themes_nav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/nav_unselected_themes"
                android:padding="@dimen/_10sdp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/settings_nav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/nav_unselected_settings"
                android:padding="@dimen/_10sdp"
                android:layout_weight="1"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/home_nav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nav_selected_home"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</RelativeLayout>